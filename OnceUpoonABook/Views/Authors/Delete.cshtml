@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.AuthorName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="AuthorImage" class="border-info rounded-circle" style="max-width: 150px" />
                </div>
                <div class="form-group">
                    <label asp-for="AuthorProfilePicURL" class="control-label"></label>
                    <input asp-for="AuthorProfilePicURL" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <label asp-for="AuthorName" class="control-label"></label>
                    <input asp-for="AuthorName" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <label asp-for="AuthorDescription" class="control-label"></label>
                    <input asp-for="AuthorDescription" class="form-control" readonly />

                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger float-right" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('AuthorImage');
            output.src = $("#AuthorProfilePicURL").val();
        })
        $("#AuthorProfilePicURL").on("change", function () {
            var output = document.getElementById('AuthorImage');
            output.src = $(this).val();
        })
    </script>
}