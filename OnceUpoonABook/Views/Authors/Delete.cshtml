@model Author

@{
    ViewData["Title"] = "Delete Author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.AuthorName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="AuthorProfilePicURL"
                         alt="@Model.AuthorName"
                         class="border-info rounded-circle" style="max-width: 150px" src="@Model.AuthorProfilePicURL" />
                </div>

                <div class="form-group">
                    <p class="col-3 fw-bold">Author Name:</p>
                    <p class="col-9">@Model.AuthorName</p>

                </div>
                <div class="form-group">
                    <p class="col-3 fw-bold">Bio:</p>
                    <p class="col-9">@Model.AuthorDescription</p>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger float-right" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('AuthorImage');
            output.src = $("#AuthorProfilePicURL").val();
        })
        $("#AuthorProfilePicURL").on("change", function () {
            var output = document.getElementById('AuthorImage');
            output.src = $(this).val();
        })
    </script>
}