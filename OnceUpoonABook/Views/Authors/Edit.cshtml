@model Author

@{
    ViewData["Title"] = "Edit Author";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit @Model.AuthorName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="AuthorImage" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorProfilePicURL" class="control-label"></label>
                        <input asp-for="AuthorProfilePicURL" class="form-control" />
                        <span asp-validation-for="AuthorProfilePicURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorName" class="control-label"></label>
                        <input asp-for="AuthorName" class="form-control" />
                        <span asp-validation-for="AuthorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AuthorDescription" class="control-label"></label>
                        <input asp-for="AuthorDescription" class="form-control" />
                        <span asp-validation-for="AuthorDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('AuthorImage');
            output.src = $("#AuthorProfilePicURL").val();
        })
        $("#AuthorProfilePicURL").on("change", function () {
            var output = document.getElementById('AuthorImage');
            output.src = $(this).val();
        })
    </script>
}