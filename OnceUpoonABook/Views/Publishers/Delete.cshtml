@model Publisher

@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img id="LogoURL"
                         alt="@Model.LogoURL"
                         class="border-info rounded-circle" style="max-width: 150px" src="@Model.LogoURL" />
                </div>
                <div class="form-group">
                    <p class="col-3 fw-bold">Publisher Name:</p>
                    <p class="col-9">@Model.Name</p>

                </div>
                <div class="form-group">
                    <p class="col-3 fw-bold">Year Created:</p>
                    <p class="col-9">@Model.YearCreated</p>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger float-right" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PublisherImage');
            output.src = $("#LogoURL").val();
        })
        $("#LogoURL").on("change", function () {
            var output = document.getElementById('PublisherImage');
            output.src = $(this).val();
        })
    </script>
}